import java.util.Scanner;

public class DonguIleSayiToplama {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int toplam = 0;
		int n;
		
		do {
			System.out.print("SayÄ± giriniz : ");
			n = input.nextInt();
			if((n % 2 == 0) && (n % 4 == 0)) {
				toplam += n;
			}
		}while(n % 2 == 0);
		
		System.out.println(toplam);

	}

}
